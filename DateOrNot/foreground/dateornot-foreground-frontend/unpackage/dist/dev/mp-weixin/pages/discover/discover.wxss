.selection-box {
    width: 100%;
    height: 20%;
    background-color: #FFFFFF;
    margin-bottom: 10px;
    box-shadow: #999999;
}
.selection-image {
    width: 40%;
    height: 80%;
    position: relative;
    -webkit-transform: translate(-50%, 0);
            transform: translate(-50%, 0);
    left: 25%;
    top: 12%;
}
.selection-text {
    position: relative;
    top: -50px;
    left: 25%;
    font-size: 20px;
}
